<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_gara"
    tools:context=".MainActivity">




    <TextView

        android:layout_marginTop="27dp"
        android:id="@+id/daar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Вход"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
android:id="@+id/ff1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Добро пожаловать!"
        android:textSize="36dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_marginStart="12dp"
        android:id="@+id/gaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="              Выполнит вход                         или зарегистрируйтесь"
        android:textSize="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="23dp"
        app:layout_constraintTop_toBottomOf="@+id/ff1"
        app:layout_constraintStart_toStartOf="@id/ff1"/>
    <EditText

        android:id="@+id/Mama"
       app:layout_constraintBottom_toTopOf="@id/number2"
        app:layout_constraintTop_toBottomOf="@id/gaga"
        android:layout_marginHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:background="@drawable/bg_names"
      android:hint="Введите вашу почту"
        android:layout_marginTop="13dp"/>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/number2"
        android:hint="Введите пароль"
        app:layout_constraintTop_toBottomOf="@id/Mama"
        android:textStyle="normal"
        android:textSize="19dp"
        android:layout_marginHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:textColor="@color/ff"
        android:background="@drawable/bg_names"
        android:padding="8dp"
        android:layout_marginTop="13dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ff4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_wew"
app:layout_constraintTop_toBottomOf="@id/number2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="60dp"
        android:text="Войти"

        android:textColor="@color/white"
        android:textSize="20sp"

        />
    <TextView
        android:id="@+id/von"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="забыли пароль"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ff4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="150sp"




        />
    <TextView
        android:id="@+id/ffh"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="кликни сюда"
    app:layout_constraintTop_toBottomOf="@+id/ff4"
    app:layout_constraintStart_toStartOf="@id/von"
    app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/fuj"
    android:layout_marginLeft="179sp"/>















</androidx.constraintlayout.widget.ConstraintLayout>